{
  "compilerOptions": {
    "baseUrl": ".", // The base directory for resolving non-relative imports
    "paths": {
      "@/*": ["src/*"] // Map @/ to the src directory
    },
    "outDir": "dist", // Directory for compiled files
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
